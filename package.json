  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=production node -r dotenv/config dist/main/server.js",
    "dev": "NODE_ENV=development sucrase-node -r dotenv/config src/main/server.ts",
    "docker:up": "npm run build && docker-compose up",
    "docker:down": "docker-compose down",
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "debug": "NODE_ENV=development nodemon -r dotenv/config -L --watch ./dist --inspect=0.0.0.0:9222 --nolazy ./dist/main/server.js",
    "check": "npm-check -s -u",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage",
    "test:coveralls": "npm run test:ci && coveralls < coverage/lcov.info"
  },
